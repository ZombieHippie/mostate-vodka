
:host {
  margin: 1em 0;
  display: block;
  min-height: 42px;
  @media (min-width: 544px) {
    min-height: 72px;
  }
}
h3 {
  @media (max-width: 544px) {
    font-size: 1.2em;
  }
  font-weight: bold;
}

.text-right-xs {
    text-align: right;
}

@media (min-width: 544px) {
  .text-right-sm {
      text-align: right;
  }
}

.text-center { text-align: center; }
.event-body {
  padding-left: 54px;
  @media (min-width: 544px) {
    padding-left: 82px;
  }
}

img.info-sponsor-img {
  position: absolute;
  width: 42px;
  height: 42px;
  @media (min-width: 544px) {
    width: 64px;
    height: 64px;
    margin-top: 8px;
  }
}

.details {
  @media (max-width: 768px) {
    max-height: 0;
    transition: max-height linear .4s;
    overflow: hidden;
  }
  position: relative;
  &.details-open {
    max-height: 100%;
  }
}
